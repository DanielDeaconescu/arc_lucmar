<IfModule mod_expires.c>
  ExpiresActive On

  # Images - cache 1 year
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # Fonts - cache 1 year
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"

  # CSS & JS - cache 1 year
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"

  # HTML & PHP - no long caching
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|jpg|jpeg|png|gif|webp|svg|woff2?)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html|php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

RewriteEngine On
RewriteBase /

# CSP Header
Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://challenges.cloudflare.com https://captcha.turnstile.cloudflare.com https://maps.googleapis.com https://maps.gstatic.com; style-src 'self' 'unsafe-inline'; font-src 'self'; frame-src 'self' https://challenges.cloudflare.com https://captcha.turnstile.cloudflare.com https://www.google.com https://www.google.com/maps/embed https://maps.google.com; img-src 'self' data: https://maps.gstatic.com;"

# Exclude sitemap.xml from rewrite
RewriteRule ^sitemap\.xml$ - [L]

# Removing /pages/ and .php from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Exclude specific files from rewriting
RewriteRule ^contact-form/?$ contact-form.php [L]
RewriteRule ^oferta-termopane/?$ oferta-termopane.php [L]
RewriteRule ^([^/]+)/?$ pages/$1.php [L]
